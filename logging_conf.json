{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "[%(levelname)s|%(module)s|L%(lineno)d] %(asctime)s: %(message)s",
      "datefmt": "%Y-%m-%dT%H:%M:%S%z"
    },
    "json": {
      "()": "utils.logger.MyJSONFormatter",
      "fmt_keys": {
        "level": "levelname",
        "message": "message",
        "timestamp": "timestamp",
        "logger": "name",
        "module": "module",
        "function": "funcName",
        "line": "lineno",
        "thread_name": "threadName"
      }
    }
  },
  "handlers": {
    "stderr": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "simple",
      "stream": "ext://sys.stderr"
    },
    "file_json": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "json",
      "filename": "logs/vzdc_discord_bot_logs.jsonl",
      "maxBytes": 10000000,
      "backupCount": 3
    },
    "deleted_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "json",
      "filename": "logs/deleted_messages.jsonl",
      "maxBytes": 5000000,
      "backupCount": 2
    },
    "server_events_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "json",
      "filename": "logs/server_events.jsonl",
      "maxBytes": 10000000,
      "backupCount": 5
    }
  },
  "loggers": {
    "root": {
      "level": "DEBUG",
      "handlers": ["stderr", "file_json"]
    },
    "deleted_messages": {
      "level": "INFO",
      "handlers": ["deleted_file", "stderr"],
      "propagate": false
    },
    "server_events": {
      "level": "INFO",
      "handlers": ["server_events_file", "stderr"],
      "propagate": false
    }
  }
}